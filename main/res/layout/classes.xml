<!-- res/layout/classes.xml -->
<!-- res/layout/classes.xml -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="1dp">

            <!-- Number Column Header -->
            <TextView
                android:id="@+id/numberHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="Nr."
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center" />

            <!-- Subject Column Header -->
            <TextView
                android:id="@+id/subjectHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:text="Class"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center" />

            <!-- Test Column Header -->
            <TextView
                android:id="@+id/testHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Test"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center" />

            <!-- Homework Column Header -->
            <TextView
                android:id="@+id/homeworkHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="Homework"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:textSize="12sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Container for Class Items -->
        <LinearLayout
            android:id="@+id/classes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp" />

    </LinearLayout>

</RelativeLayout>
