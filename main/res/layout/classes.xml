<!-- res/layout/classes.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Row -->
        <TextView
            android:id="@+id/classesDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Date"
            android:textColor="@color/text_color"
            android:textSize="10dp"
            android:textStyle="bold"
            android:paddingBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="1dp">

            <!-- Number Column Header -->
            <TextView
                android:id="@+id/numberHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:gravity="center"
                android:text="Nr."
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Subject Column Header -->
            <TextView
                android:id="@+id/subjectHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="center"
                android:text="Class"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Test Column Header -->
            <TextView
                android:id="@+id/testHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="Test"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:textStyle="bold" />

            <!-- Homework Column Header -->
            <TextView
                android:id="@+id/homeworkHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:gravity="center"
                android:text="Homework"
                android:textColor="@color/text_color"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Container for Class Items -->
        <LinearLayout
            android:id="@+id/classes_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp" />

        <ImageButton
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/background_color"
            android:padding="8dp"
            android:src="@drawable/ic_refresh"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    </LinearLayout>

</RelativeLayout>
